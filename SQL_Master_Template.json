{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sqlNFSDataVolumeName": {
      "type": "string",
      "defaultValue": "sql_data",
      "metadata": {
        "description": "Name of NFS Volume to be created for SQL data files"
      }
    },
    "sqlDataVoumeSizeGB": {
      "type": "int",
      "defaultValue": 10,
      "metadata": {
        "description": "Size of the SQL Data Volume"
      }
    },
    "sqlNFSLogVolumeName": {
      "type": "string",
      "defaultValue": "sql_log",
      "metadata": {
        "description": "Name of NFS Volume to be created for SQL log files"
      }
    },
    "sqlLogVoumeSizeGB": {
      "type": "int",
      "defaultValue": 10,
      "metadata": {
        "description": "Size of the SQL Log Volume"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "westus",
      "metadata": {
        "description": "Azure deployment location where NFS Volumes are enabled"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username for Linux and SQL Server"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for Linux and SQL Server"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "ms.testdrive.nfs-vnet",
      "metadata": {
        "description": "Name of Express Route enabled Virtual Network for NFS Volumes"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "AzureVMs",
      "metadata": {
        "description": "Name of Express Route enabled Virtual Network for NFS Volumes"
      }
    }
   
  },
  "variables": {
    "vnetId": "[resourceId('ms.nfs.testdrive','Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
    "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
    "volumeId": "[resourceId('Microsoft.NFS/Volumes', parameters('sqlNFSDataVolumeName'))]",
    "apiVersion": "2017-08-15",
    "sqlPublicIpAddressSku": "Basic",
    "sqlPublicIpAddressType": "Dynamic",
    "sqlPublicIpAddressName": "[concat('sql-vm-pip-', uniqueString(resourceGroup().id))]",
    "sqlVMName": "[concat('sql-vm-', uniqueString(resourceGroup().id))]",
    "sqlVmSize": "Standard_DS12_v2",
    "sqlVMNicName": "[concat('vm-sql-nic-', uniqueString(resourceGroup().id))]",
    "sqlNSGName": "[concat('sql-nsg-', uniqueString(resourceGroup().id))]",
    "volServiceLevel": "Standard",
    "dataVolExportPath": "[concat(parameters('sqlNFSDataVolumeName'),'-export')]",
    "logVolExportPath": "[concat(parameters('sqlNFSLogVolumeName'),'-export')]",
    "diagStorageAccountName": "[concat('diagstor', uniqueString(resourceGroup().id))]",
    "diagStorageAccountType": "Standard_LRS",
    "config-extensionScriptFolder": "CustomScripts",
    "config-extensionScriptFileName": "config-extension.sh",
    "sql-vm-extensionScriptFolder": "CustomScripts",
    "sql-vm-extensionScriptFileName": "sql-vm-extension.sh",
    "nfs-data-vol-size": "[mul(parameters('sqlDataVoumeSizeGB'), 1073741824)]",
    "nfs-log-vol-size": "[mul(parameters('sqlLogVoumeSizeGB'), 1073741824)]"
   },
  "resources": [
    {
      "type": "Microsoft.NFS/Volumes",
      "name": "[parameters('sqlNFSDataVolumeName')]",
      "apiVersion": "[variables('apiVersion')]",
      "location": "[parameters('location')]",
      "properties": {
        "serviceLevel": "[variables('volServiceLevel')]",
        "usageThreshold": "[variables('nfs-data-vol-size')]",
        "creationToken": "[variables('dataVolExportPath')]"
      },
      "resources": [
        {
          "type": "mountTargets",
          "name": "default",
          "apiVersion": "[variables('apiVersion')]",
          "location": "[parameters('location')]",
          "properties": {
            "fileSystemId": "[reference(concat('Microsoft.NFS/Volumes/', parameters('sqlNFSDataVolumeName')), '2017-08-15').fileSystemId]"
          },
          "dependsOn": [
            "[concat('Microsoft.NFS/Volumes/', parameters('sqlNFSDataVolumeName'))]"
          ]
        }
      ]
    },
    {
      "type": "Microsoft.NFS/Volumes",
      "name": "[parameters('sqlNFSLogVolumeName')]",
      "apiVersion": "[variables('apiVersion')]",
      "location": "[parameters('location')]",
      "properties": {
        "serviceLevel": "[variables('volServiceLevel')]",
        "usageThreshold": "[variables('nfs-log-vol-size')]",
        "creationToken": "[variables('logVolExportPath')]"
      },
      "resources": [
        {
          "type": "mountTargets",
          "name": "default",
          "apiVersion": "[variables('apiVersion')]",
          "location": "[parameters('location')]",
          "properties": {
            "fileSystemId": "[reference(concat('Microsoft.NFS/Volumes/', parameters('sqlNFSLogVolumeName')), '2017-08-15').fileSystemId]"
          },
          "dependsOn": [
            "[concat('Microsoft.NFS/Volumes/', parameters('sqlNFSLogVolumeName'))]"
          ]
        }
      ]
    },
    {
      "name": "[variables('sqlVMName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2016-04-30-preview",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('sqlVMNicName'))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('diagStorageAccountName'))]",
        "[concat('Microsoft.NFS/Volumes/', parameters('sqlNFSDataVolumeName'),'/mountTargets/default')]",
        "[concat('Microsoft.NFS/Volumes/', parameters('sqlNFSLogVolumeName'),'/mountTargets/default')]"
      ],
      "properties": {
        "osProfile": {
          "computerName": "[variables('sqlVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "hardwareProfile": {
          "vmSize": "[variables('sqlVmSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftSQLServer",
            "offer": "SQL2017-RHEL7",
            "sku": "SQLDEV",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "fromImage",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            }
          },
          "dataDisks": []
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('sqlVMNicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[reference(resourceId('ms.nfs.testdrive', 'Microsoft.Storage/storageAccounts', variables('diagStorageAccountName')), '2015-06-15').primaryEndpoints['blob']]"
          }
        }
      },
      "resources": [
        {
          "name": "sql-vm-extension",
          "type": "extensions",
          "location": "[parameters('location')]",
          "apiVersion": "2016-03-30",
          "dependsOn": [
            "[concat('Microsoft.Compute/virtualMachines/', variables('sqlVMName'))]"
          ],
          "tags": {
            "displayName": "sql-vm-extension"
          },
          "properties": {
            "publisher": "Microsoft.OSTCExtensions",
            "type": "CustomScriptForLinux",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "https://raw.githubusercontent.com/mudash/azure-sql-nfs-quickstart/Dev/scripts/MountExtension.sh"
              ],
              "commandToExecute": "[concat('sh ', 'MountExtension.sh', ' ', reference(concat('Microsoft.NFS/Volumes/', parameters('sqlNFSDataVolumeName'),'/mountTargets/default'), '2017-08-15').ipAddress )]"
            }
          }
        }
      ]
    },
    {
      "name": "[variables('diagStorageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "properties": {
        "accountType": "[variables('diagStorageAccountType')]"
      }
    },
    {
      "name": "[variables('sqlVMNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2016-09-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIpAddresses/', variables('sqlPublicIpAddressName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('sqlNSGName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[resourceId('ms.nfs.testdrive','Microsoft.Network/publicIpAddresses', variables('sqlPublicIpAddressName'))]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[resourceId('ms.nfs.testdrive', 'Microsoft.Network/networkSecurityGroups', variables('sqlNSGName'))]"
        }
      }
    },
    {
      "name": "[variables('sqlPublicIpAddressName')]",
      "type": "Microsoft.Network/publicIpAddresses",
      "apiVersion": "2017-08-01",
      "location": "[parameters('location')]",
      "properties": {
        "publicIpAllocationMethod": "[variables('sqlPublicIpAddressType')]"
      },
      "sku": {
        "name": "[variables('sqlPublicIpAddressSku')]"
      }
    },
    {
      "name": "[variables('sqlNSGName')]",
      "type": "Microsoft.Network/networkSecurityGroups",
      "apiVersion": "2017-06-01",
      "location": "[parameters('location')]",
      "properties": {
        "securityRules": [
          {
            "name": "default-allow-ssh",
            "properties": {
              "priority": 1000,
              "protocol": "TCP",
              "access": "Allow",
              "direction": "Inbound",
              "sourceAddressPrefix": "*",
              "sourcePortRange": "*",
              "destinationAddressPrefix": "*",
              "destinationPortRange": "22"
            }
          }
        ]
      }
    }

  ],
   "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}